<div class="container">
<h1>New game </h1>

<ul>
  <% @letters.each do |letter| %>
    <li><%= letter.capitalize %></li>
  <% end %>
</ul>
</div>

<form action="/score" method="post">
  <p> what is the longest word?</p>
  <input type="text" name="letter">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit">
</form>
